<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:menu="clr-namespace:MedicineScheduler.WPFUI.Custom.NavigationMenu">
  
  <Style TargetType="menu:NavigationMenu" x:Key="NavigationMenuStyle">
    <Setter Property="OpenCloseDuration" Value="0:0:0.25"/>
    <Setter Property="FallbackOpenWidth" Value="300"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Foreground" Value="{StaticResource NavigationMenuForeGroundBrush}"/>
    <Setter Property="Background" Value="{StaticResource NavigationMenuBackgroundBrush}"/>
  </Style>
  
</ResourceDictionary>